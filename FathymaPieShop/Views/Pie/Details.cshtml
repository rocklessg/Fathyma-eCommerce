
@model Pie

<h2>@Model.PieName</h2>

<div class="thumbnail">
    <img alt="@Model.PieName" src="@Model.ImageUrl">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price</h3>
        <h3>
            <a href="#">@Model.PieName</a>
        </h3>
        <h4>Pie Description</h4>
        <p>@Model.Description</p>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                   asp-route-pieId="@Model.Id">Add to cart</a>
            </p>
        </div>
    </div>
</div>